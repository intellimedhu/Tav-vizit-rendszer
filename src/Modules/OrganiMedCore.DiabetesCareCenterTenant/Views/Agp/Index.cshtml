<div class="row">
    <div class="col-md-12">
        <h1>
            @RenderTitleSegments(T["Táv-vizit adatok"])
        </h1>

        @await DisplayAsync(await New.PatientProfileNav(
            EVisitPatientProfileId: ViewData["EVisitPatientProfileId"],
            IsNew: false,
            ActiveNavigation: "EVisit"))

        <div class="mt-3">
            <a asp-area="OrganiMedCore.DiabetesCareCenterTenant"
               asp-controller="Agp"
               asp-action="Patient"
               asp-route-eVisitPatientProfileId="@ViewData["EVisitPatientProfileId"]"
               class="btn btn-primary"
               target="_blank">
                @T["Vércukor és inzulin adatok elemzése"]
            </a>
        </div>
    </div>
</div>